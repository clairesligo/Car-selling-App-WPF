<Window x:Class="Assignment1.Finance"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment1"
        mc:Ignorable="d"
        Title="Finance" Height="300" Width="300"
        Loaded="Window_Loaded"
        Background="Red">
    <Grid>
        <Label x:Name="lblCar" Content="Price of car" FontWeight="Bold" HorizontalAlignment="Left" Margin="35,44,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbxMonths" HorizontalAlignment="Left" Margin="127,86,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cbxMonths_SelectionChanged"/>
        <Label x:Name="lblCarPrice"   HorizontalAlignment="Left" Margin="127,44,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblLength" FontWeight="Bold" Content="Length of loan" HorizontalAlignment="Left" Margin="35,86,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblOutput" FontWeight="Bold"  HorizontalAlignment="Left" Margin="52,163,0,0" VerticalAlignment="Top" Height="50" Width="195" RenderTransformOrigin="0.287,0.549"/>

    </Grid>
</Window>
